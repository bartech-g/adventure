{
  "name": "adventure",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "@sap/cds": "^9",
    "@sap/eslint-plugin-ui5-jsdocs": "^2.0.5",
    "@sapui5/ts-types": "^1.92.2",
    "eslint": "^7.32.0",
    "express": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "cds-plugin-ui5": "^0.13.0"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-spacefarers-page": "cds watch --open spacefarers.spacefarerspage/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-departments-page": "cds watch --open departments.departmentspage/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-positions-page": "cds watch --open positions.positionspage/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "private": true,
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "url": "db/galactic.db"
        }
      },
      "auth": {
        "kind": "basic",
        "users": {
          "admin": {
            "password": "admin",
            "roles": [
              "admin"
            ]
          },
          "user": {
            "password": "user",
            "roles": [
              "user"
            ]
          }
        }
      }
    }
  },
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/spacefarers-page",
    "app/departments-page",
    "app/positions-page"
  ]
}
